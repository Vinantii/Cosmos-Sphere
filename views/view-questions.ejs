<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Questions</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: radial-gradient(circle at top left, #0b0c10, #1a1f71);
      color: #fff;
      padding-top: 70px;
      min-height: 100vh;
    }

    header.navbar {
      background: rgba(0,0,0,0.85);
      backdrop-filter: blur(6px);
      position: fixed; top:0; width:100%; z-index:1000;
    }

    .container {
      max-width: 900px;
      margin: auto;
    }

    .question-card {
      background: linear-gradient(145deg, #1f1f3a, #0b0c10);
      border: 1px solid #3A50F0;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0 0 8px #3A50F0, 0 0 12px #8A2BE2;
    }

    .question-card strong { color: #3A50F0; }
    .question-card small { color: #ccc; }

    .btn-glow {
      background: linear-gradient(45deg, #3A50F0, #8A2BE2);
      color: #fff;
      font-weight: 600;
      border-radius: 8px;
      box-shadow: 0 0 8px #3A50F0, 0 0 12px #8A2BE2;
      transition: all 0.3s ease;
    }

    .btn-glow:hover {
      transform: scale(1.05);
      box-shadow: 0 0 12px #fff, 0 0 18px #8A2BE2;
    }

    .answers li {
      margin-bottom: 5px;
    }

    hr {
      border-top: 1px solid #3A50F0;
    }

    a { text-decoration: none; }
  </style>
</head>
<body>

  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/landing">CosmoSphere</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item"><a class="nav-link" href="/landing">Home</a></li>
          <% if(currentUser){ %>
            <li class="nav-item"><span class="nav-link">Hello <%= currentUser.username %></span></li>
            <li class="nav-item"><a class="nav-link btn btn-outline-light ms-2" href="/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link btn btn-outline-light ms-2" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link btn btn-outline-light ms-2" href="/register">Sign Up</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>All Questions & Answers</h3>
      <% if(currentUser){ %>
        <a href="/post-question" class="btn btn-glow">‚ûï Post a new question</a>
      <% } %>
    </div>

    <% if(questions.length === 0){ %>
      <p class="text-center">No questions yet.</p>
    <% } else { %>
      <% questions.forEach(q => { %>
        <div class="question-card">
          <p><strong>Q:</strong> <%= q.question %></p>
          <p><small>Posted by: <%= q.user %></small></p>

          <% if(q.answers.length > 0){ %>
            <p><em>Answers:</em></p>
            <ul class="answers">
              <% q.answers.forEach(a => { %>
                <li>
                  <%= a.text %> <small>(by <%= a.user %>)</small>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <em>No answers yet.</em>
          <% } %>

          <div class="mt-2 d-flex flex-wrap gap-2">
            <% if(currentUser){ %>
              <form action="/like/<%= q._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-glow">üëç Like (<%= q.likes %>)</button>
              </form>

              <a href="/answer-question/<%= q._id %>" class="btn btn-glow">üí¨ Answer this Question</a>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
